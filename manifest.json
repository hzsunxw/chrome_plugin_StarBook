{
  "manifest_version": 3,
  "name": "智能网页收藏夹",
  "version": "1.0",
  "description": "增强型网页收藏管理工具",
  "permissions": [
    "tabs",
    "bookmarks",
    "storage",
    "scripting",
    "activeTab",
    "offscreen"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://api.deepseek.com/*",
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "offscreen": {
    "reason": "DOM_PARSER",
    "justification": "用于在后台解析HTML字符串"
  }
}